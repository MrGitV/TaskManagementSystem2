<Window x:Class="ClientApp.UI.Views.UserTaskAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:infra="clr-namespace:ClientApp.Infrastructure"
        Title="Assign Tasks to User" MinHeight="600" MinWidth="800"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15">
            <Run Text="Assign tasks for user:"/>
            <Run Text="{Binding User.FullName}" Foreground="{StaticResource PrimaryThemeBrush}"/>
        </TextBlock>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Tasks}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{infra:TranslateExtension Key=DueDate}" Binding="{Binding Task.DueDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="1.5*"/>
                <DataGridTextColumn Header="{infra:TranslateExtension Key=Title}" Binding="{Binding Task.Title}" Width="2*"/>
                <DataGridTextColumn Header="{infra:TranslateExtension Key=Description}" Binding="{Binding Task.Description}" Width="3*"/>
                <DataGridTemplateColumn Header="{infra:TranslateExtension Key=Assigned}" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsAssigned, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{infra:TranslateExtension Key=SaveButton}" 
                    Command="{Binding SaveCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="{infra:TranslateExtension Key=CancelButton}" 
                    Command="{Binding CancelCommand}" Width="100" Style="{StaticResource CancelButton}"/>
        </StackPanel>
    </Grid>
</Window>