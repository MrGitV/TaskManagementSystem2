<Window x:Class="ClientApp.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:ClientApp.UI.Views.UserControls"
        xmlns:infra="clr-namespace:ClientApp.Infrastructure"
        mc:Ignorable="d"
        Title="{ infra:TranslateExtension Key=AppTitle}" MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}" Padding="15" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{ infra:TranslateExtension Key=OpenRegistrationButton}" 
                            Command="{Binding OpenRegistrationCommand}" 
                            Visibility="{Binding AdminPanelVisibility}" 
                            Margin="0,0,20,0"/>
                    <Button Content="{ infra:TranslateExtension Key=LogoutButton}" Command="{Binding LogoutCommand}" Style="{StaticResource CancelButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="{ infra:TranslateExtension Key=TasksTabHeader}">
                <uc:CalendarView DataContext="{Binding CalendarViewModel}"/>
            </TabItem>
            <TabItem Header="{ infra:TranslateExtension Key=AdminPanelTabHeader}" Visibility="{Binding AdminPanelVisibility}">
                <uc:AdminView DataContext="{Binding AdminViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
