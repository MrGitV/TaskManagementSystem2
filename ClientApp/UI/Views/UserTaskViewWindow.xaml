<Window x:Class="ClientApp.UI.Views.UserTaskViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:infra="clr-namespace:ClientApp.Infrastructure"
        mc:Ignorable="d"
        Title="{infra:TranslateExtension Key=TaskDetails}" 
        MinHeight="600" MinWidth="800" Height="650" Width="900"
        WindowStartupLocation="CenterOwner" Background="{StaticResource PrimaryBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource PrimaryThemeBrush}" Padding="15">
            <TextBlock Text="{infra:TranslateExtension Key=TaskDetails}" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
        </Border>
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="220" MaxWidth="350"/>
                <ColumnDefinition Width="2.5*" MinWidth="450"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="4" Padding="10">
                <StackPanel>
                    <TextBlock Text="{infra:TranslateExtension Key=Tasks}" FontWeight="Bold" Margin="0,0,0,10" FontSize="16"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding Tasks}" 
                                 SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                                 DisplayMemberPath="Title" 
                                 BorderThickness="0"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="15,0,0,0"
                          IsEnabled="{Binding SelectedTask, Converter={StaticResource NotNullToBoolConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding SelectedTask.Title}" FontWeight="Bold" FontSize="22" Margin="0,0,0,10" TextWrapping="Wrap"/>
                    <TextBlock Margin="0,0,0,15">
                        <Run Text="{infra:TranslateExtension Key=DueDate}" FontWeight="SemiBold"/>
                        <Run Text=":"/>
                        <Run Text="{Binding SelectedTask.DueDate, StringFormat='dd.MM.yyyy HH:mm'}"/>
                    </TextBlock>
                    <TextBlock Text="{infra:TranslateExtension Key=Description}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedTask.Description}" Padding="10" Background="WhiteSmoke" TextWrapping="Wrap" MinHeight="80"/>
                    <Border BorderBrush="{StaticResource BorderBrush}" Background="{StaticResource SecondaryBackgroundBrush}" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="{infra:TranslateExtension Key=Comments}" FontWeight="Bold" Margin="0,0,0,10" FontSize="16"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" Margin="0,0,0,10">
                                <ItemsControl ItemsSource="{Binding Comments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="5" Margin="0,0,0,5" Background="#F9F9F9" CornerRadius="3">
                                                <StackPanel>
                                                    <TextBlock TextWrapping="Wrap">
                                                        <Run Text="{Binding Author.FullName}" FontWeight="Bold"/>
                                                        <Run Text=" - "/>
                                                        <Run Text="{Binding SentAt, StringFormat='g'}" Foreground="Gray"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Margin="5,2,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding NewCommentText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0" Height="50" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                                <Button Grid.Column="1" Content="{infra:TranslateExtension Key=AddCommentButton}" Command="{Binding AddCommentCommand}" VerticalAlignment="Bottom"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="15">
            <Button Content="{infra:TranslateExtension Key=CloseButton}" IsCancel="True" Width="120" Style="{StaticResource CancelButton}" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>